" set leader key
nnoremap <SPACE> <Nop>
let mapleader = " "

" basic
set clipboard+=unnamed
set number
set relativenumber
set showmode

" search
set hlsearch
set incsearch
set smartcase
set ignorecase
set scrolloff=5

" plugins
set ideamarks
set surround
set argtextobj
set NERDTree
set exchange
set highlightedyank
set textobj-entire
set keep-english-in-normal-and-restore-in-insert
set ReplaceWithRegister
" basic key mapping
nnoremap L $
vnoremap H ^
nnoremap H ^
vnoremap L $
nnoremap ; :

inoremap jk <esc>

""" Idea specific settings ------------------
set ideajoin
set idearefactormode=keep

" clear the highlighted search result
nnoremap <leader>sc :nohlsearch<CR>

" NERDTree
nnoremap <leader>e :NERDTreeToggle<cr>

" Insert mode shortcut
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
inoremap <C-a> <Home>
inoremap <C-e> <End>

" Project Manage
nnoremap <leader>pc  :action CloseProject<CR>
nnoremap <leader>pr  :action ManageRecentProjects<CR>
nnoremap <leader>pi  :action ImportProject<CR>

" edit vimrc
nnoremap <leader>ve :e ~/.ideavimrc<CR>
nnoremap <leader>vw :w!<CR>
nnoremap <leader>vs :source ~/.ideavimrc<CR>


" run and debug
nnoremap ,d :action Debug<CR>
nnoremap ,r :action Run<CR>
nnoremap ,c :action CompileDirty<CR>
nnoremap ,b :action ToggleLineBreakpoint<CR>
nnoremap ,v :action ViewBreakpoints<CR>
nnoremap ,s :action Stop<CR>

" idea action mapping
nnoremap <leader>ga :action GotoAction<CR>
nnoremap <leader>gc :action GotoClass<CR>
nnoremap <leader>gf :action GotoFile<CR>
nnoremap <leader>gt :action GotoTest<CR>

nnoremap <leader>gs :action GotoSuperMethod<CR>
nnoremap <leader>gd :action GotoDeclaration<CR>
nnoremap <leader>gi :action GotoImplementation<CR>

nnoremap <leader>gf :action FileStructurePopup<CR>
nnoremap <leader>re :action RenameElement<CR>
nnoremap <leader>rf :action RenameFile<CR>
nnoremap <leader>sw :action SurroundWith<CR>

" refactor
